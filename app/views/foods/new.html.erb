<div class="w-50 mx-auto my-5 ">
    <h1 class="text-center">Create New Food</h1>

    <%= form_with model: @food, url: user_foods_path, class: "form mt-5", local: true do |f| %>

        <% if f.object.errors.any? %>
            <div class="alert alert-danger">
                <% f.object.errors.full_messages.each do |message| %>
                    <div><%= message.inspect %></div>
                <% end %>
            </div>
        <% end %>
        
        <div class="mb-3">
            <%= f.label :name %><br>
            <%= f.text_field :name, placeholder: "Enter food name", class: "form-control", required: true %>
        </div>

        <div class="mb-3">
            <%= f.label :measurement_unit %><br>
            <%= f.text_field :measurement_unit, placeholder: "E.g grams, units", class: "form-control", required: true %>
        </div>

        <div class="mb-3">
            <%= f.label :quantity %><br>
            <%= f.text_field :quantity, placeholder: "Enter quantity", class: "form-control", required: true %>
        </div>

        <div class="mb-3">
            <%= f.label :price %><br>
            <%= f.text_field :price, placeholder: "Enter price", class: "form-control", required: true %>
        </div>
        
        <%= f.submit "Create Food", class: "btn btn-primary bg-gradient" %>
    <% end %>
</div>