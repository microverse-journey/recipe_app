<div class="col-md-5 mx-auto mt-5 border py-5 px-4">
<h2 class="mb-5 text-center">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,class: "form-control", autocomplete: "email" %>
  </div>

  <div class="my-4">
    <%= f.submit "Send me reset password instructions", class: "btn btn-primary bg-gradient w-100" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
