<%= form_with model:[@recipe, @recipe_food], url:recipe_recipe_foods_path(@recipe.id) do |form| %>
  <div>
    <%= form.label :food_id %>
    <%= form.collection_select :food_id, @current_user.foods , :id, :name, required:true %>
  </div>
  <div>
    <%= form.label :quantity %>
    <%= form.number_field :quantity, step: :any, required:true %>
  </div>
  <div>
    <%= form.submit 'Add ingredient' %>
  </div>
<%end%>
