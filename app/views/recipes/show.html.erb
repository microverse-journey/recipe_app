<div  class="col-md-8 mx-auto">
  <div class="text-center mb-5 mt-4">
    <h2> <%=@recipe.name%></h2>
  </div>

  <div>
    <div class="d-flex justify-content-between">
      <h5>Preparation time: <%= @recipe.preparation_time%> hour</h5>
      <div>
      <%= form_with model:[@recipe], url:recipe_path(@recipe.id) do |form| %>
      <div class="form-check form-switch">
        <%= form.check_box :public, checked:@recipe.public, class:"form-check-input" %> 
        <%= form.label :public, class:"form-check-label" %>
      </div>
      <%end%>
    </div>
    </div>

    <h5 class="my-4">Cooking time: <%= @recipe.cooking_time%> hour</h5>
    <h5>Steps go here...</h5>
  </div>

  <div class="d-flex justify-content-between my-5">
      <%= link_to 'Generate shopping list', general_shopping_list_path, class: "btn btn-primary bg-gradient" %>
      <%= link_to 'Add ingredient', new_recipe_recipe_food_path(@recipe.id), class: "btn btn-outline-primary bg-gradient" %>
  </div>

  <hr>
  <div class="mt-5">
    <div>
      <%= render "shared/recipe_food"%>
    </div>
  </div>
</div>
